<div class='col s12 m6 l4'>
    <div id='profile-card' class='card'>
        <div class='card-image waves-effect waves-block waves-light'><img class='activator' src='../images/user-bg.jpg' alt='user background'></img>
        </div>
        <div class='card-content'>
            <img src='../images/gearsIcon.png' alt='' class='circle responsive-img activator card-profile-image'></img>
            <a onclick='appRemove("app_id");' class='btn-floating activator btn-move-up waves-effect waves-light darken-2 right'><i class='mdi-action-delete'></i></a>
            <a onclick='uploadApp("app_id");' class='btn-floating activator btn-move-up waves-effect waves-light darken-2 right'><i class='mdi-file-cloud-upload'></i></a>
            <a onclick='newToken("app_id");' class='btn-floating activator btn-move-up waves-effect waves-light darken-2 right'><i class='mdi-maps-layers'></i></a>
            <div id='update-app-app_id'><a id='update-action' onclick='appEdit("app_id");' class='btn-floating activator btn-move-up waves-effect waves-light darken-2 right'><i class='mdi-editor-mode-edit'></i></a>
            </div>
            <p class='grey-text ultra-small'><i class='mdi-device-access-time cyan-text text-darken-2'></i>app_created</p>
            <div class='row margin'>
                <div class='input-field col s12'><i class='mdi-action-turned-in prefix cyan-text text-darken-2'></i>
                    <input readonly="true" id='app-name-app_id' type='text' value='app_id'></input>
                </div>
            </div>
            <div class='row margin'>
                <div class='input-field col s12'><i class='mdi-action-description prefix cyan-text text-darken-2'></i>
                    <input readonly="true" id='app-token-app_id' type='text' value='app_token'></input>
                </div>
            </div>
            <div class='row margin'>
                <div class='input-field col s12'><i class='mdi-action-subject prefix cyan-text text-darken-2'></i>
                    <input readonly="true" id='app-about-app_id' type='text' value='app_about'></input>
                </div>
            </div>
            <div class='card-action center-align'>
                <a href='./?view=users&amp;app=app_id' class='valign left'><i class='mdi-social-group-add green-text text-darken-2'></i> <span class='users badge'>app_users</span></a>
                <a onclick='Materialize.toast(\"&lt;span&gt;Application projects view not implemented yet!&lt;/span&gt;\", 3000);' class='valign'><i class='mdi-file-folder brown-text text-darken-2'></i> <span class='projects badge'>app_projects</span></a>
                <a onclick='Materialize.toast(\"&lt;span&gt; Application records view not implemented yet!&lt;/span&gt;\", 3000);' class='valign right'><i class='mdi-file-cloud-upload blue-text text-darken-2'></i> <span class='records badge'>project_envs</span></a>
            </div>
        </div>
    </div>
</div>