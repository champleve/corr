<div class="modal-content">
  <div class="row center tooltipped" data-position="top" data-delay="50" data-tooltip="application logo">
      <label for="picture-input">
          <img src="images/gearsIcon.png" alt="" id="update-user-picture" class="circle responsive-img valign profile-image-login"></img>
      </label>
  </div>
  <div class="row margin">
    <div class="input-field col s12">
      <i class="mdi-action-lock-outline prefix"></i>
      <input id="app-name" type="text"></input>
      <label for="app-name">App Name</label>
    </div>
  </div>
  <div class="row margin">
    <div class="input-field col s12">
      <i class="mdi-action-assignment prefix"></i>
      <textarea id="app-about" class="materialize-textarea"></textarea>
      <label id="app-about-value" for="app-about">About</label>
    </div>
  </div>
  <div class="row margin">
    <div class="input-field col s12">
      <a onclick="return user.add_app();" class="btn waves-effect purple waves-light col s12">Confirm</a>
    </div>
  </div>
</div>